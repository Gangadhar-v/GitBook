<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LaunchFragment"
    android:background="@color/white">


    <com.sn.lib.NestedProgress
        android:id="@+id/launch_progressBar"
        android:indeterminate="true"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:circularflow_radiusInDP="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        app:innerAnimInterpolator="linear"
        app:outerAnimInterpolator="overshoot"
        app:outerLoaderAnimDuration="1500"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/backgroundImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img"/>
        <ImageView
            android:id="@+id/noInternet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_1"
            android:scaleType="fitCenter"
            android:visibility="visible"
            android:layout_marginTop="60dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_weight="1"
            android:id="@+id/editTextLyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="clear_text"
            app:errorEnabled="true">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter GitUser Name"
                style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
                android:background="@drawable/edittex_bg"/>
        </com.google.android.material.textfield.TextInputLayout>
        <ImageButton
            android:id="@+id/shareBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="share button"
            android:layout_alignRight="@+id/backgroundImage"
            android:backgroundTint="@color/white"
            android:layout_marginTop="5dp"
            android:src="@drawable/ripple_bg"/>

        </LinearLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>